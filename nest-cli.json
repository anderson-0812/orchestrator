{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "root": "apps/lambda-orchestrator",
  "sourceRoot": "apps/lambda-orchestrator/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/lambda-orchestrator/tsconfig.app.json"
  },
  "projects": {
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "customers-api": {
      "type": "application",
      "root": "apps/customers-api",
      "entryFile": "main",
      "sourceRoot": "apps/customers-api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/customers-api/tsconfig.app.json"
      }
    },
    "orders-api": {
      "type": "application",
      "root": "apps/orders-api",
      "entryFile": "main",
      "sourceRoot": "apps/orders-api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/orders-api/tsconfig.app.json"
      }
    },
    "lambda-orchestrator": {
      "type": "application",
      "root": "apps/lambda-orchestrator",
      "entryFile": "main",
      "sourceRoot": "apps/lambda-orchestrator/src",
      "compilerOptions": {
        "tsConfigPath": "apps/lambda-orchestrator/tsconfig.app.json"
      }
    }
  }
}
